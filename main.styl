body
	text-align center
	font-family sans-serif

#timer
	font-size 100px
	font-family 'Roboto Mono', 'Courier New', monospace
	& span:first-of-type::before
		content ''
	& span::before
		font-family 'Roboto Mono', 'Courier New', monospace
		content ':'

h1
	padding-top 10px
	font-size 50px

#helper span
	margin 0 72px 0 72px


#beer
	display table
	transform translateX(0)
	margin 6em auto 3em auto

$beer-color = #FFD36D
$glass-color = #EEF5F8
$foam-color = #FFF8E1

.beer, .beer-b, .bubble, .small-bubbles, .drip
	position absolute

.bubble, .small-bubbles
	border-radius 100%

.mug
	position relative
	width 20vmin
	height 32vmin
	background $glass-color
	border-radius 2vmin
	&:before
		z-index -2
		left 12vmin
		top 6vmin
		width 15vmin
		height 17vmin
		border-radius 19%
		background $glass-color
	&:after
		z-index -1
		width 12vmin
		height 13vmin
		top 8vmin
		left 13vmin
		background #fff
		border-radius 19%

.mug:before, .mug:after
	position absolute
	content ''

.beer-b
	bottom 2vmin
	left 2vmin
	width 16vmin
	height 28.5vmin
	background darken($glass-color, 10)
	border-radius 0.5vmin 0.5vmin 1vmin 1vmin

.beer
	bottom 2vmin
	left 2vmin
	width 16vmin
	height (28vmin * 0)
	background $beer-color
	border-radius 0 0 1vmin 1vmin

.bubble
	opacity 0
	width 10vmin
	height 10vmin
	top -5vmin
	left -3vmin
	background darken($foam-color, 5)
	&:before
		width 12vmin
		height 12vmin
		left 5vmin
		top -2vmin
	&:after
		width 10vmin
		height 10vmin
		left 14vmin
		top 0vmin

.bubble:before, .bubble:after
	position absolute
	content ''
	background $foam-color
	border-radius 100%

.small-bubbles
	opacity 0
	background darken($foam-color, 2)
	width 5vmin
	height 5vmin
	top -7vmin
	left 11vmin
	&:before
		width 3vmin
		height 3vmin
		top -6vmin
		left -3vmin
	&:after
		width 3vmin
		height 3vmin
		top -8vmin
		left -8vmin

.drip
	opacity 0
	width 5vmin
	height 14vmin
	top 1vmin
	border-radius 100px
	left -2vmin
	box-shadow 4vmin -6vmin 0 $foam-color
	background darken($foam-color, 3)