@import 'config'

body
	text-align center
	font-family 'Roboto Mono', monospace
	font-weight 400

.yeast
	position absolute
	top 0
	left 0
	width 100%
	height 100%


#timer
	width 100%
	font-size 50px
	@media sm
		font-size 75px
	@media md
		font-size 100px
	& span.digit
		padding 0
		margin 0
	& span.sep
		animation 2s blink linear infinite
	&.flash
		animation 1.5s blink linear infinite


h1
	font-size 30px
	@media md
		font-size 50px
	padding-top 10px
	font-weight 300

#beer
	display table
	transform translateX(0)
	margin-left auto
	margin-right auto
	margin-top 100px
	margin-bottom 2vmin
	@media sm
		margin-top 150px
	@media md
		margin-top 200px

$beer-color1 = #FFD54F
$beer-color2 = #FFB300
$glass-color = #E3F2FD
$foam-color = #FAFAFA
$carbonation-color1 = #FFC107
$carbonation-color2 = #FFB300

.froth
	opacity 0
	transition 1s opacity ease

.froth.flow
	opacity 1
	transition 1s opacity ease-in-out .9s

.beer, .beer-b, .bubble, .small-bubbles, .drip, .liquid, .foam
	position absolute

.bubble, .small-bubbles
	border-radius 100%

.mug
	position relative
	width 20vmin
	height 32vmin
	background $glass-color
	border-radius 2vmin
	&:before
		z-index -2
		left 12vmin
		top 6vmin
		width 15vmin
		height 17vmin
		border-radius 22%
		background $glass-color
	&:after
		z-index -1
		width 12vmin
		height 13vmin
		top 8vmin
		left 13vmin
		background #fff
		border-radius 14%

.mug:before, .mug:after
	position absolute
	content ''

.beer-b
	bottom 2vmin
	left 2vmin
	width 16vmin
	height 30vmin
	background darken($glass-color, 3)
	border-radius 0 0 1vmin 1vmin

.liquid
	bottom 2vmin
	left 2vmin
	height 0
	width 16vmin
	animation 0.3s liquidPac ease
	animation-delay 1s
	transition 1.2s height ease-in-out

.beer
	bottom 0
	width 16vmin
	max-height 30vmin
	height 100%
	background linear-gradient($beer-color1, $beer-color2)
	animation 1.3s beerFill ease-in-out
	animation-delay 1s
	opacity 0
	& .foam
		background-color #fff
		height 0
		transition .4s height ease-out
		width 100%
	&.filled
		opacity 1
		border-radius 0 0 1vmin 1vmin
		& .foam
			height 1.6vmin
			transition 1s height ease-out

.beer
	&:before, &:after
		opacity 0

.beer.carbonate
	&:before, &:after
		transition 1s opacity ease
		position absolute
		content ''
		border-radius 100%
		animation 2.4s carbonate infinite
		animation-delay 1.3s
	&:before
		background $carbonation-color1
		width 2vmin
		height 2vmin
		bottom 2vmin
		left 5vmin
		box-shadow 7vmin -15vmin 0 $carbonation-color1, 4vmin -10vmin 0 $carbonation-color2, 6vmin -3vmin 0 $carbonation-color1
	&:after
		background $carbonation-color2
		width 1.5vmin
		height 1.5vmin
		bottom 6vmin
		left 6vmin
		box-shadow -3vmin -8vmin 0 $carbonation-color2, 7vmin -5vmin 0 $carbonation-color1

.bubble
	transition 1s opacity ease
	width 10vmin
	height 10vmin
	top -5vmin
	left -3vmin
	background darken($foam-color, 5)
	&:before
		width 12vmin
		height 12vmin
		left 5vmin
		top -2vmin
	&:after
		width 10vmin
		height 10vmin
		left 14vmin
		top -2vmin

.bubble:before, .bubble:after
	transition 1s opacity ease
	position absolute
	content ''
	background $foam-color
	border-radius 100%

.small-bubbles:before, .small-bubbles:after
	position absolute
	content ''
	border-radius 100%
	animation-delay 3.8s
	opacity 0

.small-bubbles
	transition 1s opacity ease
	background darken($foam-color, 2)
	width 5vmin
	height 5vmin
	top -7vmin
	left 11vmin
	&:before
		transition 1s opacity ease
		background darken($foam-color, 5)
		width 3vmin
		height 3vmin
		top -6vmin
		left -1vmin
		animation 5s up infinite
	&:after
		transition 1s opacity ease
		background darken($foam-color, 5)
		width 3vmin
		height 3vmin
		top -8vmin
		left -7vmin
		animation 5s up2 infinite

.drip
	transition 1s opacity ease
	width 5vmin
	// height 5vmin
	top 1vmin
	border-radius 100px
	left -1.7vmin
	box-shadow 4vmin -4vmin 0 $foam-color
	background darken($foam-color, 3)
	opacity 0
	transition 1s opacity ease
.drip.flow
	opacity 1
	animation: 5s drip infinite;
	animation-delay: 1.3s;
	transition 1s opacity ease
	transition-delay 1.4s

@keyframes carbonate {
	0% {
		transform: translateY(0px);
		opacity: 0;
	}
	25% {
		opacity: 1;
	}
	75% {
		opacity: 0;
	}
	100% {
		transform: translateY(-50px);
		opacity: 0;
	}
}

@keyframes up {
	0% {
		transform: translateY(10px);
		opacity: 0;
	}
	25% {
		opacity: 1;
	}
	75% {
		opacity: 0;
	}
	100% {
		transform: translateY(-40px);
		opacity: 0;
	}
}

@keyframes up2 {
	0% {
		transform: translateY(10px);
		opacity: 0;
	}
	25% {
		opacity: 1;
	}
	75% {
		opacity: 0;
	}
	100% {
		transform: translateY(-55px);
		opacity: 0;
	}
}

@keyframes beerFill {
	0% {
		opacity: 0;
		height: 0%;
		border-radius 0 0 0.2vmin 0.2vmin
	}
	10% {
		opacity: 0.4;
	}
	100% {
		height: 100%
		opacity: 1;
		border-radius 0 0 1vmin 1vmin
	}
}

@keyframes liquidPac {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}

@keyframes drip {
	0% {
		transform: translateY(0px);
		height: 2vmin;
		opacity: 1;
	}
	45% {
		opacity: 1;
	}
	70% {
		height: 22vmin;
		opacity: 0;
	}
	90% {
		height: 0;
		opacity: 0;
	}
	100% {
		height: 0;
		opacity: 1;
	}
}

@keyframes blink {
	0% { opacity: 1; }
	50% { opacity: 1; }
	50.01% { opacity: 0; }
	100% { opacity: 0; }
}